<Window x:Class="FountainDesign.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FountainDesign"
        mc:Ignorable="d"
        Title="Welcome to the Fountain Planner" Height="450" Width="800">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock FontSize="12px" Margin="8" Text="Configure water fixtures, learn the total water pressure." />

        <!-- Formatting is set up in App.xaml. See:
                learn.microsoft.com/en-us/dotnet/desktop/wpf/controls/walkthrough-create-a-button-by-using-xaml?view=netframeworkdesktop-4.8 -->

        <!-- TODO Set these up as an array -->
        <Grid Name="mainGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <TextBlock Width="120" Grid.Row="0" Grid.Column="0" Text="TYPE" />
            <TextBlock Width="120" Grid.Row="0" Grid.Column="1" Text="SIZE" />
            <TextBlock Width="120" Grid.Row="0" Grid.Column="2" Text="EFFECT HEIGHT" />

            <ComboBox Name="WaterFixture_1_NozzleType"   Width="120" Grid.Row="1" Grid.Column="0">
                <ComboBoxItem IsSelected="True">jet</ComboBoxItem>
                <ComboBoxItem>spray</ComboBoxItem>
                <ComboBoxItem>mist</ComboBoxItem>
            </ComboBox>
            <ComboBox Name="WaterFixture_1_NozzleSize"   Width="120" Grid.Row="1" Grid.Column="1">
                <ComboBoxItem IsSelected="True">small</ComboBoxItem>
                <ComboBoxItem>medium</ComboBoxItem>
                <ComboBoxItem>large</ComboBoxItem>
            </ComboBox>
            <ComboBox Name="WaterFixture_1_EffectHeight" Width="120" Grid.Row="1" Grid.Column="2">
                <ComboBoxItem>4</ComboBoxItem>
                <ComboBoxItem IsSelected="True">6</ComboBoxItem>
                <ComboBoxItem>8</ComboBoxItem>
            </ComboBox>

            <ComboBox Name="WaterFixture_2_NozzleType"   Width="120" Grid.Row="2" Grid.Column="0">mist
                <ComboBoxItem IsSelected="True">jet</ComboBoxItem>
                <ComboBoxItem>spray</ComboBoxItem>
                <ComboBoxItem>mist</ComboBoxItem>
            </ComboBox>
            <ComboBox Name="WaterFixture_2_NozzleSize"   Width="120" Grid.Row="2" Grid.Column="1">
                <ComboBoxItem>small</ComboBoxItem>
                <ComboBoxItem IsSelected="True">medium</ComboBoxItem>
                <ComboBoxItem>large</ComboBoxItem>
            </ComboBox>
            <ComboBox Name="WaterFixture_2_EffectHeight" Width="120" Grid.Row="2" Grid.Column="2">
                <ComboBoxItem>4</ComboBoxItem>
                <ComboBoxItem IsSelected="True">6</ComboBoxItem>
                <ComboBoxItem>8</ComboBoxItem>
            </ComboBox>

            <ComboBox Name="WaterFixture_3_NozzleType"   Width="120" Grid.Row="3" Grid.Column="0">
                <ComboBoxItem IsSelected="True">jet</ComboBoxItem>
                <ComboBoxItem>spray</ComboBoxItem>
                <ComboBoxItem>mist</ComboBoxItem>
            </ComboBox>
            <ComboBox Name="WaterFixture_3_NozzleSize"   Width="120" Grid.Row="3" Grid.Column="1">
                <ComboBoxItem>small</ComboBoxItem>
                <ComboBoxItem>medium</ComboBoxItem>
                <ComboBoxItem IsSelected="True">large</ComboBoxItem>
            </ComboBox>
            <ComboBox Name="WaterFixture_3_EffectHeight" Width="120" Grid.Row="3" Grid.Column="2">
                <ComboBoxItem>4</ComboBoxItem>
                <ComboBoxItem IsSelected="True">6</ComboBoxItem>
                <ComboBoxItem>8</ComboBoxItem>
            </ComboBox>

        </Grid>

        <Button Name="GetResult" Click="OnClick">Button 2</Button>

        <TextBox Name="resultPSI" Width="40"></TextBox>


    </StackPanel>        
</Window>
